@ARTICLE{smeaton2021,
  
AUTHOR={Smeaton, Craig and Hunt, Corallie A. and Turrell, William R. and Austin, William E. N.},   
	 
TITLE={Marine Sedimentary Carbon Stocks of the United Kingdom’s Exclusive Economic Zone},      
	
JOURNAL={Frontiers in Earth Science},      
	
VOLUME={9},           
	
